<form action="/add-link" method="post" class="my-5">
  <div class="form-row">
    <div class="col">
      <input type="text" class="form-control {{#if errorMessage}}is-invalid{{/if}}" placeholder="Type a link to share: https://..." name="url">
      <div class="invalid-feedback">
        {{errorMessage}}
      </div>
      
    </div>
    <div class="col flex-grow-0">
      <button class="btn btn-primary px-5">Share</button>
    </div>
  </div>
</form>

<table class="table table-hover">
  <thead class="thead-primary table-dark text-center">
    <tr class="bg-primary ">
      <th>Link</th>
      <th>Like</th>
    </tr>
  </thead>
  <tbody>
    {{#each links}}
    <tr>
      <td class="align-middle"><a href="{{this.url}}">{{this.url}}</a></td>
      <td><a href="/like-link/{{this._id}}" class="btn btn-sm btn-outline-primary btn-block px-5">Like</a></td>
    </tr>
    {{/each}}
  </tbody>
  <tbody>

</table>
